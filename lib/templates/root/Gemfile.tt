source "http://rubygems.org"

gem "rails", "<%= ActiveSupport::VERSION::STRING %>"
gem "capybara", ">= 0.3.9"
gem "sqlite3-ruby", :require => "sqlite3"

if RUBY_VERSION < '1.9'
  gem "ruby-debug", ">= 0.10.3"
end

<% if rspec? %>
gem "rspec-rails", ">= 2.0.0.beta"
<% end %>

<% if cucumber? %>
gem "cucumber-rails"
<% end %>